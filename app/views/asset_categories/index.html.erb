<p id="notice"><%= notice %></p>

<h1>Asset Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @asset_categories.each do |asset_category| %>
      <tr>
        <td><%= asset_category.name %></td>
        <td><%= asset_category.description %></td>
        <td><%= link_to 'Show', asset_category %></td>
        <td><%= link_to 'Edit', edit_asset_category_path(asset_category) %></td>
        <td><%= link_to 'Destroy', asset_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Asset Category', new_asset_category_path %>
